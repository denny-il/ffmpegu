{
	"name": "@ffmpegujs/ffmpegu",
	"version": "0.1.0",
	"description": "FFmpeg wrapper for JS runtimes",
	"type": "module",
	"license": "MIT",
	"author": {
		"name": "Denis Ilchyshyn",
		"email": "ilchishin.denis@gmail.com",
		"url": "https://github.com/denis-ilchishin"
	},
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		}
	},
	"files": [
		"src/**/*.ts",
		"README.md",
		"EXAMPLES.md",
		"PLAN.md"
	],
	"keywords": [
		"ffmpeg",
		"video",
		"audio",
		"media",
		"processing",
		"nodejs",
		"bun",
		"deno",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/denis-ilchishin/ffmpegu.git"
	},
	"bugs": {
		"url": "https://github.com/denis-ilchishin/ffmpegu/issues"
	},
	"homepage": "https://github.com/denis-ilchishin/ffmpegu#readme",
	"scripts": {
		"clean": "rm -rf dist node_modules && pnpm -r exec rm -rf dist node_modules",
		"check:type": "tsc --noEmit",
		"check:lint": "biome lint .",
		"check:fmt": "biome format .",
		"check": "pnpm run check:fmt && pnpm run check:lint && pnpm run check:type",
		"fmt": "biome check --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:unit": "vitest run tests/unit/",
		"test:integration": "vitest run tests/integration/",
		"test:integration:docker": "docker compose run --rm --build test"
	},
	"engines": {
		"node": ">=20.0.0",
		"bun": ">=1.2.16",
		"deno": ">=2.3.0"
	},
	"packageManager": "pnpm@10.12.1",
	"devDependencies": {
		"@biomejs/biome": "2.0.0-beta.6",
		"@types/node": "20",
		"@vitest/coverage-v8": "3.2.3",
		"typescript": "^5.8.3",
		"vitest": "^3.2.3"
	}
}
